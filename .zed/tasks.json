[
  {
    "command": "start",
    "label": "Start Live Server",
    // package.json snippet to run a live development server using live-server
    "name": "live-server-project",
    "version": "1.0.0",
    "private": true,
    "scripts": {
      "start": "live-server --open=./ --port=5500",
      "live": "live-server --open=./ --port=5500 --watch=.",
      "serve": "live-server --port=8080"
    },
    "devDependencies": {
      "live-server": "^1.2.1"
    }
  }
]
